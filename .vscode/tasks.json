{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Audit links and build locally",
			"type": "shell",
			"command": "npm run audit:links",
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "Build site",
			"type": "shell",
			"command": "npm run build",
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "Run e2e tests",
			"type": "shell",
			"command": "npm run test:e2e",
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "test"
		}
	]
}