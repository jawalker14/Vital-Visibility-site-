{
  "name": "vital-visibility-site",
  "version": "1.0.0",
  "private": true,
  "description": "Marketing site for South African healthcare professionals.",
  "scripts": {
    "lint": "eslint . && stylelint '**/*.{css,scss}' && htmlhint '**/*.html'",
    "format": "prettier -w .",
    "test:e2e": "playwright test",
    "audit:lighthouse": "node ./scripts/lighthouse.mjs",
    "start": "vite",
    "build": "vite build && cp -R css js images dist/",
    "preview": "vite preview --port 5173"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "eslint": "^8.0.0",
    "htmlhint": "^1.1.4",
    "lighthouse": "^11.0.0",
    "playwright": "^1.55.0",
    "prettier": "^3.0.0",
    "stylelint": "^15.10.0",
    "stylelint-config-standard": "^33.0.0",
    "vite": "^5.0.0",
    "zod": "^3.22.0"
  }
}
