    "@playwright/test": "^1.55.0",
    "eslint": "^8.0.0",
    "htmlhint": "^1.1.4",
    "lighthouse": "^11.0.0",
    "playwright": "^1.55.0",
    "prettier": "^3.0.0",
    "sharp": "^0.34.4",
    "stylelint": "^15.10.0",
    "stylelint-config-standard": "^33.0.0",
    "vite": "^5.0.0"
  }
