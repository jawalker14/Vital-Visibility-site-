{
  "name": "vital-visibility-site",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Marketing site for South African healthcare professionals.",
  "scripts": {
    "lint": "eslint . && stylelint '**/*.{css,scss}' && htmlhint '**/*.html'",
    "audit:links": "node scripts/audit-links.mjs",
  "optimize:images": "node scripts/optimize-images.mjs",
